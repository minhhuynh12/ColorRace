<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_bar_red</item>
        <item name="colorPrimaryDark">@color/color_bar_red</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/gray_show</item>
    </style>

    <style name="border_layout_style">
        <item name="android:paddingTop">@dimen/dip10</item>
        <item name="android:paddingBottom">@dimen/dip10</item>
        <item name="android:paddingRight">@dimen/dip10</item>
        <item name="android:paddingLeft">@dimen/dip10</item>
        <item name="android:background">@drawable/border_shadow_background</item>
    </style>

    <style name="border_layout_style_login">

        <item name="android:paddingRight">@dimen/dip10</item>
        <item name="android:paddingLeft">@dimen/dip10</item>
        <item name="android:background">@drawable/border_shadow_background</item>
    </style>
    <style name="border_layout_style_login_otp">
        <item name="android:paddingLeft">@dimen/dip10</item>
        <item name="android:background">@drawable/border_shadow_background</item>
    </style>

    <style name="text_color">
        <item name="android:textColorPrimary">#ffffff</item>
    </style>

    <style name="generalnotitle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowNoTitle">true</item>
    </style>


        <style name="Bubble.TextAppearance.Dark" parent="android:TextAppearance.Medium">
            <item name="android:textSize">14sp</item>
            <item name="android:textColor">#ff7f7f7f</item>
        </style>
        <style name="Bubble.TextAppearance.Light" parent="Bubble.TextAppearance.Dark">
            <item name="android:textColor">#ffeeeeee</item>
        </style>
        <style name="ClusterIcon.TextAppearance" parent="android:TextAppearance">
            <item name="android:textColor">#ffeeeeee</item>
            <item name="android:textSize">16sp</item>
            <item name="android:textStyle">bold</item>
        </style>


</resources>
